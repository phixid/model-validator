{
  "name": "toolbox",
  "version": "0.0.1",
  "description": "JavaScript utilities for copy-paste usage in other projects",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "scripts": {
    "format": "prettier --write '**/*.{t,j}s'",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage && coveralls < coverage/lcov.info",
    "test:watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint"
    ],
    "*.js": "prettier --write"
  },
  "dependencies": {},
  "devDependencies": {
    "@rollup/plugin-typescript": "^5.0.0",
    "@types/jest": "^26.0.3",
    "coveralls": "^3.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "keywords": [
    "utilities",
    "model-validation",
    "type-checking"
  ],
  "author": "Kristof Hermans <kristof.hermans.kh@gmail.com>",
  "license": "UNLICENSED",
  "private": true
}
